}

clear_ascii() {
    cat "$@" | sed -E "s/"$'\E'"\[([0-9]{1,3}((;[0-9]{1,3})*)?)?[m|K]//g"
}

dm() {
  if [[ -d /Applications/Dash.app || /Applications/SetApp/Dash.app ]]; then
    url=$(printf %s "manpages:$1"|jq -sRr @uri)
    open "dash://${url}"
  else
    /usr/bin/man "$@"
  fi
}

man() {
    tldr "$@" || dm "$@"
}

