{
  "tui": {},
  "plugin": [
    "opencode-gemini-auth@latest",
    "opencode-openai-codex-auth@latest",
    "@franlol/opencode-md-table-formatter@latest",
    "@mohak34/opencode-notifier@latest"
    // "octto",
    // "micode"
  ],

  "disabled_providers": ["deepseek", "anthropic", "openrouter", "perplexity"],

  "formatter": {
    "swiftformat": {
      "command": ["swiftformat", "$FILE"],
      "extensions": [".swift"]
    }
  },

  "mcp": {
    "ref": {
      "enabled": false,
      "type": "local",
      "command": ["npx", "ref-tools-mcp@latest"],
      "environment": {
        "REF_API_KEY": "<REF_API_KEY_REDACTED>"
      }
    },
    "deepwiki": {
      "enabled": false,
      "type": "remote",
      "url": "https://mcp.deepwiki.com/mcp"
    },
    "basic-memory-cloud": {
      "type": "remote",
      "url": "https://cloud.basicmemory.com/mcp"
    },
    "exa": {
      "type": "remote",
      "url": "https://mcp.exa.ai/mcp?exaApiKey=<EXA_API_KEY_REDACTED>"
    },
    "sosumi": {
      "type": "remote",
      "url": "https://sosumi.ai/mcp"
    },
    "mobile-mcp": {
      "enabled": false,
      "type": "local",
      "command": ["npx", "-y", "@mobilenext/mobile-mcp@latest"]
    },
    "simctl-mcp": {
      "enabled": false,
      "type": "local",
      "command": ["npx", "-y", "simctl-mcp"]
    },
    "firecrawl": {
      "enabled": false,
      "type": "local",
      "command": ["npx", "-y", "firecrawl-mcp"],
      "environment": {
        "FIRECRAWL_API_KEY": "<FIRECRAWL_API_KEY_REDACTED>"
      }
    },
    "tavily": {
      "enabled": false,
      "type": "remote",
      "url": "https://mcp.tavily.com/mcp/?tavilyApiKey=<TAVILY_API_KEY_REDACTED>"
    },
    "vibium": {
      "enabled": false,
      "type": "local",
      "command": ["npx", "-y", "vibium"]
    },
    "shellwright": {
      "enabled": false,
      "type": "local",
      "command": ["npx", "-y", "@dwmkerr/shellwright"]
    },
    "xcodebuild-mcp": {
      "enabled": false,
      "type": "local",
      "command": ["npx", "-y", "xcodebuildmcp@latest"],
      "environment": {
        "XCODEBUILDMCP_ENABLED_WORKFLOWS": "simulator,logging,project-discovery,utilities,session-management,debugging,simulator-management",
        "INCREMENTAL_BUILDS_ENABLED": "true"
      }
    },
    "peekaboo": {
      "enabled": false,
      "type": "local",
      "command": ["peekaboo", "mcp"],
      "environment": {
        "PEEKABOO_AI_PROVIDERS": "openai/gpt-4.1",
        "OPENAI_API_KEY": "<OPENAI_API_KEY_REDACTED>"
      }
    },
    "serena": {
      "type": "local",
      "command": ["uvx", "--from", "git+https://github.com/oraios/serena", "serena", "start-mcp-server"]
    }
  },
  "$schema": "https://opencode.ai/config.json"
}
