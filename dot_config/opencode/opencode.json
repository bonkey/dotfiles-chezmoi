{
  "tui": {},
  "plugin": [
    // "opencode-gemini-auth@latest",
    "opencode-antigravity-auth@latest",
    "opencode-openai-codex-auth@latest",
    "@franlol/opencode-md-table-formatter@latest",
    "@mohak34/opencode-notifier@latest",
    "@tarquinen/opencode-dcp@latest"
    // "octto",
    // "micode"
  ],

  "disabled_providers": ["deepseek", "anthropic", "openrouter", "perplexity"],

  "formatter": {
    "swiftformat": {
      "command": ["swiftformat", "$FILE"],
      "extensions": [".swift"]
    }
  },

  "mcp": {
    // Ref: Technical documentation search with semantic retrieval from official sources
    // Best for: Accessing up-to-date library docs, API references, and code examples during development
    "ref": {
      "type": "local",
      "command": ["npx", "ref-tools-mcp@latest"],
      "environment": {
        "REF_API_KEY": "<REF_API_KEY_REDACTED>"
      }
    },
    // Tavily: Real-time web search, content extraction, and news retrieval
    // Best for: Current information lookups, research tasks, and discovering recent web content
    "tavily": {
      "type": "remote",
      "url": "https://mcp.tavily.com/mcp/?tavilyApiKey=<TAVILY_API_KEY_REDACTED>"
    },
    // Basic Memory: Persistent memory layer for AI coding sessions
    // Best for: Maintaining context across sessions, remembering project state and conversation history
    "basic-memory-cloud": {
      "type": "remote",
      "url": "https://cloud.basicmemory.com/mcp"
    },
    // Sosumi: Apple Developer documentation and HIG converter to AI-readable format
    // Best for: SwiftUI development, accessing Apple API docs, and Human Interface Guidelines
    "sosumi": {
      "type": "remote",
      "url": "https://sosumi.ai/mcp"
    },

    // Serena: Semantic code retrieval and editing toolkit
    // Best for: Advanced code search, refactoring, and semantic understanding of codebases
    "serena": {
      "type": "local",
      "command": ["uvx", "--from", "git+https://github.com/oraios/serena", "serena", "start-mcp-server"]
    },
    // Mobile MCP: iOS simulator and Android emulator automation
    // Best for: Mobile E2E testing, UI automation, and app testing workflows
    "mobile-mcp": {
      "enabled": false,
      "type": "local",
      "command": ["npx", "-y", "@mobilenext/mobile-mcp@latest"]
    },
    // SimCtl MCP: iOS Simulator control and management
    // Best for: Installing apps, taking screenshots, recording videos, and managing iOS simulators
    "simctl-mcp": {
      "enabled": false,
      "type": "local",
      "command": ["npx", "-y", "simctl-mcp"]
    },
    // XcodeBuild MCP: Xcode project builds, simulator/device management, and Swift packages
    // Best for: Automating iOS/macOS builds, running tests, and managing Xcode workflows
    "xcodebuild-mcp": {
      "enabled": false,
      "type": "local",
      "command": ["npx", "-y", "xcodebuildmcp@latest"],
      "environment": {
        "XCODEBUILDMCP_ENABLED_WORKFLOWS": "simulator,logging,project-discovery,utilities,session-management,debugging,simulator-management",
        "INCREMENTAL_BUILDS_ENABLED": "true"
      }
    },
    // Peekaboo: macOS screen capture, visual analysis, and GUI automation
    // Best for: Debugging visual issues, screenshot-based testing, and UI interaction automation
    "peekaboo": {
      "enabled": false,
      "type": "local",
      "command": ["peekaboo", "mcp"],
      "environment": {
        "PEEKABOO_AI_PROVIDERS": "openai/gpt-4.1",
        "OPENAI_API_KEY": "<OPENAI_API_KEY_REDACTED>"
      }
    },

    // Vibium: AI-native browser automation using Playwright
    // Best for: Web scraping, browser testing, and automated web interactions
    "vibium": {
      "enabled": false,
      "type": "local",
      "command": ["npx", "-y", "vibium"]
    },
    // Shellwright: Terminal session recording and TUI automation (like Playwright for the shell)
    // Best for: Recording terminal sessions, capturing TUI screenshots (e.g., k9s, vim), and shell automation
    "shellwright": {
      "enabled": false,
      "type": "local",
      "command": ["npx", "-y", "@dwmkerr/shellwright"]
    },

    // Firecrawl: Advanced web scraping and content extraction to LLM-ready format
    // Best for: Extracting structured data from websites, site crawling, and web content mapping
    "firecrawl": {
      "enabled": false,
      "type": "local",
      "command": ["npx", "-y", "firecrawl-mcp"],
      "environment": {
        "FIRECRAWL_API_KEY": "<FIRECRAWL_API_KEY_REDACTED>"
      }
    },
    // DeepWiki: AI-generated documentation and Q&A for GitHub repositories
    // Best for: Understanding repository structure, exploring codebases, and answering technical questions
    "deepwiki": {
      "enabled": false,
      "type": "remote",
      "url": "https://mcp.deepwiki.com/mcp"
    },
    // Exa: Neural search engine with semantic similarity and content discovery
    // Best for: Advanced web searches across academic papers, GitHub, LinkedIn, and specialized content
    "exa": {
      "enabled": false,
      "type": "remote",
      "url": "https://mcp.exa.ai/mcp?exaApiKey=<EXA_API_KEY_REDACTED>"
    }
  },
  "$schema": "https://opencode.ai/config.json"
}
