{
  "tui": {},
  "plugin": [
    "opencode-antigravity-auth@latest",
    "opencode-openai-codex-auth@latest",
    "@franlol/opencode-md-table-formatter@latest",
    "@mohak34/opencode-notifier@latest",
    "@tarquinen/opencode-dcp@latest"
  ],
  "disabled_providers": [
    "deepseek",
    "anthropic",
    "openrouter",
    "perplexity"
  ],
  "formatter": {
    "swiftformat": {
      "command": [
        "swiftformat",
        "$FILE"
      ],
      "extensions": [
        ".swift"
      ]
    }
  },
  "mcp": {
    "ref": {
      "type": "local",
      "command": [
        "npx",
        "ref-tools-mcp@latest"
      ],
      "environment": {
        "REF_API_KEY": "<REF_API_KEY_REDACTED>"
      },
      "enabled": true
    },
    "chunkhound": {
      "type": "local",
      "command": [
        "chunkhound",
        "mcp"
      ],
      "enabled": false
    },
    "tavily": {
      "type": "remote",
      "url": "https://mcp.tavily.com/mcp/?tavilyApiKey=<TAVILY_API_KEY_REDACTED>",
      "enabled": true
    },
    "basic-memory-cloud": {
      "type": "remote",
      "url": "https://cloud.basicmemory.com/mcp",
      "enabled": true
    },
    "sosumi": {
      "type": "remote",
      "url": "https://sosumi.ai/mcp",
      "enabled": true
    },
    "serena": {
      "type": "local",
      "command": [
        "uvx",
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server"
      ],
      "enabled": false
    },
    "mobile-mcp": {
      "enabled": false,
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@mobilenext/mobile-mcp@latest"
      ]
    },
    "mobile": {
      "enabled": false,
      "type": "local",
      "command": [
        "npx",
        "-y",
        "simctl-mcp"
      ]
    },
    "simctl": {
      "enabled": false,
      "type": "local",
      "command": [
        "npx",
        "-y",
        "xcodebuildmcp@latest"
      ],
      "environment": {
        "XCODEBUILDMCP_ENABLED_WORKFLOWS": "simulator,logging,project-discovery,utilities,session-management,debugging,simulator-management",
        "INCREMENTAL_BUILDS_ENABLED": "true"
      }
    },
    "xcstrings-crud": {
      "type": "local",
      "command": [
        "xcstrings-crud",
        "mcp"
      ],
      "enabled": false
    },
    "peekaboo": {
      "enabled": false,
      "type": "local",
      "command": [
        "peekaboo",
        "mcp"
      ],
      "environment": {
        "PEEKABOO_AI_PROVIDERS": "openai/gpt-4.1",
        "OPENAI_API_KEY": "<OPENAI_API_KEY_REDACTED>"
      }
    },
    "vibium": {
      "enabled": false,
      "type": "local",
      "command": [
        "npx",
        "-y",
        "vibium"
      ]
    },
    "shellwright": {
      "enabled": false,
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@dwmkerr/shellwright"
      ]
    },
    "firecrawl": {
      "enabled": false,
      "type": "local",
      "command": [
        "npx",
        "-y",
        "firecrawl-mcp"
      ],
      "environment": {
        "FIRECRAWL_API_KEY": "<FIRECRAWL_API_KEY_REDACTED>"
      }
    },
    "deepwiki": {
      "enabled": false,
      "type": "remote",
      "url": "https://mcp.deepwiki.com/mcp"
    },
    "exa": {
      "enabled": false,
      "type": "remote",
      "url": "https://mcp.exa.ai/mcp?exaApiKey=<EXA_API_KEY_REDACTED>"
    }
  },
  "$schema": "https://opencode.ai/config.json"
}