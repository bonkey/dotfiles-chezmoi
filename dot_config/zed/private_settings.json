{
  // ================================
  // CONTEXT SERVERS
  // ================================
  "agent_servers": {
    "claude": {
      "default_mode": "bypassPermissions"
    },
    "codex": {
      "default_mode": "full-access",
      "favorite_models": [
        "gpt-5.2-codex/xhigh",
        "gpt-5.2-codex/high",
        "gpt-5.2-codex/medium",
        "gpt-5.2-codex/low"
      ],
      "default_config_options": {},
      "favorite_config_option_values": {}
    }
  },
  "context_servers": {
    "basic-memory-cloud": {
      "settings": {},

      "enabled": true,
      "url": "https://cloud.basicmemory.com/mcp",
    },
    "Atlassian": {
      "settings": {},

      "enabled": true,
      "url": "https://mcp.atlassian.com/v1/sse",
    },
    "Ref": {
      "enabled": true,
      "command": "npx",
      "args": ["ref-tools-mcp@latest"],
      "env": {
        "REF_API_KEY": "<REF_API_KEY_REDACTED>",
      },
    },
    "deepwiki": {
      "enabled": true,
      "command": "npx",
      "args": ["-y", "mcp-remote", "https://mcp.deepwiki.com/mcp"],
    },
    "sosumi": {
      "enabled": true,
      "command": "npx",
      "args": ["-y", "mcp-remote", "https://sosumi.ai/mcp"],
    },
    "tavily": {
      "enabled": true,
      "command": "npx",
      "args": [
        "-y",
        "mcp-remote",
        "https://mcp.tavily.com/mcp/?tavilyApiKey=<TAVILY_API_KEY_REDACTED>",
      ],
    },
    "peekaboo": {
      "enabled": false,
      "command": "npx",
      "args": ["-y", "@steipete/peekaboo-mcp@beta"],
      "env": {
        "PEEKABOO_AI_PROVIDERS": "anthropic/claude-opus-4,openai/gpt-4.1,ollama/llava:latest",
        "OPENAI_API_KEY": "<OPENAI_API_KEY_REDACTED>",
      },
    },
    "XcodeBuildMCP": {
      "enabled": false,
      "command": "npx",
      "args": ["-y", "xcodebuildmcp@latest"],
      "env": {
        "INCREMENTAL_BUILDS_ENABLED": "true",
      },
    },
  },

  // ================================
  // AI AGENT CONFIGURATION
  // ================================
  "agent": {
    "default_profile": "write",
    "favorite_models": [
      {
        "provider": "google",
        "model": "gemini-3-flash-preview",
      },
      {
        "provider": "google",
        "model": "gemini-3-pro-preview",
      },
      {
        "provider": "openai",
        "model": "gpt-5.2-codex",
      },
    ],
    "inline_assistant_model": {
      "provider": "google",
      "model": "gemini-3-flash-preview",
    },
    "always_allow_tool_actions": true,
    "enabled": true,
    "button": true,
    "default_width": 500,
    "dock": "right",
    "default_model": {
      "provider": "google",
      "model": "gemini-3-flash-preview",
    },
    "commit_message_model": {
      "provider": "google",
      "model": "gemini-2.5-flash",
    },
  },
  "completions": {
    "words": "fallback",
    "words_min_length": 3,
    "lsp": true,
    "lsp_fetch_timeout_ms": 0,
    "lsp_insert_mode": "replace_suffix",
  },

  // ================================
  // EDITING & PREDICTIONS
  // ================================
  "edit_predictions": {
    "mode": "subtle",
  },
  "autosave": {
    "after_delay": {
      "milliseconds": 10000,
    },
  },
  "format_on_save": "on",
  "formatter": "auto",
  "ensure_final_newline_on_save": true,
  "remove_trailing_whitespace_on_save": true,
  "auto_signature_help": true,
  "always_treat_brackets_as_autoclosed": true,
  "use_autoclose": false,

  // ================================
  // SEARCH CONFIGURATION
  // ================================
  "search": {
    "whole_word": false,
    "case_sensitive": false,
    "include_ignored": false,
    "regex": true,
  },
  "use_smartcase_search": true,

  // ================================
  // APPEARANCE & THEME
  // ================================
  "theme": {
    "mode": "system",
    "dark": "Zedokai Darker (Filter Spectrum)",
    "light": "Zedokai Light",
  },
  "colorize_brackets": true,

  // ================================
  // KEYMAP
  // ================================
  "base_keymap": "VSCode",
  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "never",
    "toggle_relative_line_numbers": true,
    "use_smartcase_find": true,
  },

  // ================================
  // FONTS & TYPOGRAPHY
  // ================================
  "buffer_font_family": "0xProto Nerd Font Mono",
  "buffer_font_size": 16,
  "ui_font_size": 15,

  // ================================
  // LAYOUT & DISPLAY
  // ================================
  "soft_wrap": "editor_width",
  "preferred_line_length": 120,
  "show_wrap_guides": true,
  "cursor_shape": "bar",
  "current_line_highlight": "all",
  "hide_mouse": "on_typing_and_movement",

  // ================================
  // PANELS & UI ELEMENTS
  // ================================
  "outline_panel": {
    "dock": "right",
  },
  "tab_bar": {
    "show": true,
  },
  "minimap": {
    "show": "auto",
  },
  "title_bar": {
    "show_branch_icon": true,
    "show_branch_name": true,
    "show_project_items": true,
    "show_onboarding_banner": true,
    "show_user_picture": true,
    "show_sign_in": true,
  },
  "tabs": {
    "close_position": "right",
    "git_status": true,
    "file_icons": true,
  },
  "toolbar": {
    "breadcrumbs": true,
    "code_actions": true,
  },
  "indent_guides": {
    "enabled": true,
    "line_width": 1,
    "active_line_width": 2,
    "coloring": "indent_aware",
    "background_coloring": "disabled",
  },
  "inlay_hints": {
    "enabled": true,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true,
    "edit_debounce_ms": 700,
    "scroll_debounce_ms": 50,
  },

  // ================================
  // FILE TYPES & LANGUAGE SUPPORT
  // ================================
  "file_types": {
    "Ruby": ["Gemfile", "Dangerfile", "Fastfile", "Pluginfile", "Gymfile", "Scanfile", "Brewfile"],
    "Shell Script": [".aliases*", ".z*tmpl*", ".aliases*"],
    "Diff": ["*.patch"],
    "Python": ["*.gyb"],
  },
  "languages": {
    "Ruby": {
      "language_servers": ["solargraph", "rubocop", "!ruby-lsp"],
    },
    "Python": {
      "language_servers": ["!pylsp", "pyright"],
    },
    "Swift": {
      "format_on_save": "off",
    },
    "Just": {
      "format_on_save": "off",
    },
  },

  // ================================
  // LANGUAGE SERVER PROTOCOL (LSP)
  // ================================
  "lsp": {
    "solargraph": {
      "settings": {
        "use_bundler": false,
      },
      "initialization_options": {
        "diagnostics": true,
        "formatting": true,
      },
    },
  },

  // ================================
  // VERSION CONTROL (GIT)
  // ================================
  "git": {
    "inline_blame": {
      "enabled": true,
      "delay_ms": 500,
    },
  },

  // ================================
  // TERMINAL CONFIGURATION
  // ================================
  "terminal": {
    "copy_on_select": true,
    "keep_selection_on_copy": false,
    "font_size": 13,
    "font_family": "0xProto Nerd Font",
    "default_height": 150,
    "shell": {
      "with_arguments": {
        "program": "/bin/zsh",
        "args": ["-l"],
      },
    },
    "env": {
      "EDITOR": "zed --wait",
    },
  },
}
