{
  // ================================
  // CONTEXT SERVERS
  // ================================
  "context_servers": {
    "Ref": {
      "source": "custom",
      "enabled": true,
      "command": "npx",
      "args": ["ref-tools-mcp@latest"],
      "env": {
        "REF_API_KEY": "<REF_API_KEY_REDACTED>"
      }
    },
    "firecrawl": {
      "source": "custom",
      "enabled": true,
      "command": "npx",
      "args": ["-y", "firecrawl-mcp"],
      "env": {
        "FIRECRAWL_API_KEY": "<FIRECRAWL_API_KEY_REDACTED>"
      }
    },
    "deepwiki": {
      "source": "custom",
      "enabled": true,
      "command": "npx",
      "args": ["-y", "mcp-remote", "https://mcp.deepwiki.com/mcp"]
    },
    "tavily": {
      "source": "custom",
      "enabled": true,
      "command": "npx",
      "args": ["-y", "mcp-remote", "https://mcp.tavily.com/mcp/?tavilyApiKey=<TAVILY_API_KEY_REDACTED>"]
    },
    "supermemory": {
      "source": "custom",
      "enabled": true,
      "command": "npx",
      "args": [
        "-y",
        "supergateway",
        "--streamableHttp",
        "https://api.supermemory.ai/mcp",
        "--header",
        "Authorization: Bearer <SUPERMEMORY_API_KEY_REDACTED>"
      ]
    },
    "exa": {
      "source": "custom",
      "enabled": true,
      "command": "npx",
      "args": ["-y", "mcp-remote", "https://mcp.exa.ai/mcp?exaApiKey=<EXA_API_KEY_REDACTED>"]
    },
    "openmemory": {
      "source": "custom",
      "enabled": false,
      "command": "npx",
      "args": ["-y", "openmemory"],
      "env": {
        "OPENMEMORY_API_KEY": "<OPENMEMORY_API_KEY_REDACTED>",
        "CLIENT_NAME": "openmemory"
      }
    },
    "context7": {
      "source": "custom",
      "enabled": false,
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp"]
    },
    "peekaboo": {
      "source": "custom",
      "enabled": false,
      "command": "npx",
      "args": ["-y", "@steipete/peekaboo-mcp@beta"],
      "env": {
        "PEEKABOO_AI_PROVIDERS": "anthropic/claude-opus-4,openai/gpt-4.1,ollama/llava:latest",
        "OPENAI_API_KEY": "<OPENAI_API_KEY_REDACTED>"
      }
    },
    "XcodeBuildMCP": {
      "source": "custom",
      "enabled": false,
      "command": "npx",
      "args": ["-y", "xcodebuildmcp@latest"],
      "env": {
        "INCREMENTAL_BUILDS_ENABLED": "true"
      }
    },
    "swiftlens": {
      "source": "custom",
      "enabled": false,
      "command": "uvx",
      "args": ["swiftlens"],
      "env": {}
    }
  },

  // ================================
  // AI AGENT CONFIGURATION
  // ================================
  "agent": {
    "always_allow_tool_actions": true,
    "enabled": true,
    "button": true,
    "default_width": 900,
    "dock": "right",
    "inline_assistant_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4"
    },
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4"
    },
    "commit_message_model": {
      "provider": "google",
      "model": "gemini-2.5-flash"
    }
  },

  // ================================
  // EDITING & PREDICTIONS
  // ================================
  "edit_predictions": {
    "mode": "subtle"
  },
  "autosave": {
    "after_delay": {
      "milliseconds": 10000
    }
  },
  "format_on_save": "prettier",
  "ensure_final_newline_on_save": true,
  "remove_trailing_whitespace_on_save": true,
  "auto_signature_help": true,
  "always_treat_brackets_as_autoclosed": true,
  "use_autoclose": false,

  // ================================
  // SEARCH CONFIGURATION
  // ================================
  "search": {
    "whole_word": false,
    "case_sensitive": false,
    "include_ignored": false,
    "regex": true
  },
  "use_smartcase_search": true,

  // ================================
  // APPEARANCE & THEME
  // ================================
  "theme": {
    "mode": "system",
    "dark": "Zedokai Darker (Filter Spectrum)",
    "light": "Zedokai Light"
  },

  // ================================
  // KEYMAP
  // ================================
  "base_keymap": "VSCode",
  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "never",
    "toggle_relative_line_numbers": true,
    "use_smartcase_find": true
  },

  // ================================
  // FONTS & TYPOGRAPHY
  // ================================
  "buffer_font_family": "0xProto Nerd Font Mono",
  "buffer_font_size": 16,
  "ui_font_size": 15,

  // ================================
  // LAYOUT & DISPLAY
  // ================================
  "soft_wrap": "editor_width",
  "preferred_line_length": 120,
  "show_wrap_guides": true,
  "cursor_shape": "bar",
  "current_line_highlight": "all",
  "hide_mouse": "on_typing_and_movement",

  // ================================
  // PANELS & UI ELEMENTS
  // ================================
  "outline_panel": {
    "dock": "right"
  },
  "tab_bar": {
    "show": true
  },
  "minimap": {
    "show": "auto"
  },
  "title_bar": {
    "show_branch_icon": true,
    "show_branch_name": true,
    "show_project_items": true,
    "show_onboarding_banner": true,
    "show_user_picture": true,
    "show_sign_in": true
  },
  "tabs": {
    "close_position": "right",
    "git_status": true,
    "file_icons": true
  },
  "toolbar": {
    "breadcrumbs": true,
    "code_actions": true
  },
  "indent_guides": {
    "enabled": true,
    "line_width": 1,
    "active_line_width": 2,
    "coloring": "indent_aware",
    "background_coloring": "disabled"
  },
  "inlay_hints": {
    "enabled": true,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true,
    "edit_debounce_ms": 700,
    "scroll_debounce_ms": 50
  },

  // ================================
  // FILE TYPES & LANGUAGE SUPPORT
  // ================================
  "file_types": {
    "Ruby": ["Gemfile", "Dangerfile", "Fastfile", "Pluginfile", "Gymfile", "Scanfile", "Brewfile"],
    "Shell Script": [".aliases*", ".z*tmpl*", ".aliases*"],
    "Diff": ["*.patch"],
    "Python": ["*.gyb"]
  },
  "languages": {
    "Ruby": {
      "language_servers": ["solargraph", "rubocop", "!ruby-lsp"]
    },
    "Python": {
      "language_servers": ["!pylsp", "pyright"]
    },
    "Swift": {
      "format_on_save": "off"
    }
  },

  // ================================
  // LANGUAGE SERVER PROTOCOL (LSP)
  // ================================
  "lsp": {
    "solargraph": {
      "settings": {
        "use_bundler": false
      },
      "initialization_options": {
        "diagnostics": true,
        "formatting": true
      }
    }
  },

  // ================================
  // VERSION CONTROL (GIT)
  // ================================
  "git": {
    "inline_blame": {
      "enabled": true,
      "delay_ms": 500
    }
  },

  // ================================
  // TERMINAL CONFIGURATION
  // ================================
  "terminal": {
    "copy_on_select": true,
    "font_size": 13,
    "font_family": "0xProto Nerd Font",
    "default_height": 150,
    "shell": {
      "with_arguments": {
        "program": "/bin/zsh",
        "args": ["-l"]
      }
    },
    "env": {
      "EDITOR": "zed --wait"
    }
  }
}
