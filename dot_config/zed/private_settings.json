// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  // User Interface
  "icon_theme": "Colored Zed Icons Theme Light",
  "theme": {
    "mode": "system",
    "light": "Catppuccin Latte",
    "dark": "Catppuccin Mocha"
  },
  "ui_font_size": 15,
  "ui_font_family": "Iosevka Nerd Font",
  "active_pane_magnification": 1.5,
  "outline_panel": {
    "dock": "right",
    "indent_guides": {
      "enabled": true,
      "line_width": 1,
      "active_line_width": 2,
      "coloring": "indent_aware"
    },
    "show_on_startup": true
  },
  "tabs": {
    "close_position": "right",
    "git_status": true
  },

  // Editor Appearance
  "buffer_font_size": 14,
  "buffer_font_family": "0xProto Nerd Font Mono",
  "soft_wrap": "bounded",
  "preferred_line_length": 100,
  "indent_guides": {
    "enabled": true,
    "line_width": 1,
    "active_line_width": 2,
    "coloring": "indent_aware",
    "background_coloring": "disabled"
  },

  // Editor Behavior
  "base_keymap": "VSCode",
  "vim_mode": true,
  "auto_signature_help": true,
  "always_treat_brackets_as_autoclosed": true,
  "use_autoclose": false,
  "autosave": {
    "after_delay": {
      "milliseconds": 10000
    }
  },

  // Code Intelligence
  "diagnostics": {
    "include_warnings": true,
    "inline": {
      "enabled": true,
      "update_debounce_ms": 150,
      "padding": 4,
      "min_column": 0,
      "max_severity": null
    }
  },
  "inlay_hints": {
    "enabled": true,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true,
    "edit_debounce_ms": 700,
    "scroll_debounce_ms": 50
  },

  // File Types and Languages
  "file_types": {
    "Ruby": ["Gemfile", "Dangerfile", "Fastfile", "Pluginfile", "Gymfile", "Scanfile", "Brewfile"],
    "Shell Script": [".aliases*", ".z*tmpl*", ".aliases*"],
    "Python": ["*.gyb"]
  },
  "languages": {
    "Ruby": {
      "language_servers": ["ruby-lsp", "!solargraph"]
    },
    "Swift": {
      "format_on_save": "on"
    }
  },
  "jupyter": {
    "enabled": true
  },

  // Language Server Protocol
  "lsp": {
    "solargraph": {
      "initialization_options": {
        "diagnostics": true,
        "formatting": true
      }
    }
  },

  // Git Integration
  "git": {
    "inline_blame": {
      "enabled": true,
      "delay_ms": 500
    }
  },

  // Terminal
  "terminal": {
    "copy_on_select": true,
    "font_size": 10,
    "font_family": "0xProto Nerd Font",
    "toolbar": {
      "breadcrumbs": false,
      "enabled": false
    },
    "shell": {
      "with_arguments": {
        "program": "/bin/zsh",
        "args": ["-l"]
      }
    },
    "env": {
      "EDITOR": "zed --wait"
    }
  },

  // Assistant
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-7-sonnet-latest"
    },
    "enable_experimental_live_diffs": true,
    "version": "2"
  }
}
