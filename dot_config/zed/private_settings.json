// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "language_models": {
    "ollama": {},
    "google": {
      "available_models": [
        {
          "name": "gemini-2.0-flash-exp",
          "display_name": "Gemini 2.0 Flash",
          "max_tokens": 1000000
        }
      ]
    }
  },
  "edit_predictions": {
    "mode": "subtle"
  },
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-7-sonnet-thinking-latest"
    },
    "enable_experimental_live_diffs": true,
    "version": "2",
    "provider": "google"
  },

  "outline_panel": {
    "dock": "right"
  },

  "tab_bar": {
    "show": true
  },

  "base_keymap": "VSCode",
  "buffer_font_family": "0xProto Nerd Font Mono",
  "buffer_font_size": 16,
  "vim_mode": true,
  "ui_font_size": 15,
  "active_pane_magnification": 1.5,
  "tabs": {
    "close_position": "right",
    "git_status": true
  },

  "auto_signature_help": true,
  "always_treat_brackets_as_autoclosed": true,
  "use_autoclose": false,

  "indent_guides": {
    "enabled": true,
    "line_width": 1,
    "active_line_width": 2,
    "coloring": "indent_aware",
    "background_coloring": "disabled"
  },

  "file_types": {
    "Ruby": [
      "Gemfile",
      "Dangerfile",
      "Fastfile",
      "Pluginfile",
      "Gymfile",
      "Scanfile",
      "Brewfile"
    ],
    "Shell Script": [".aliases*", ".z*tmpl*", ".aliases*"],
    "Python": ["*.gyb"]
  },
  "jupyter": {
    "enabled": true
  },
  "languages": {
    "Ruby": {
      "language_servers": ["ruby-lsp", "!solargraph"]
    },
    "Swift": {
      "format_on_save": "off"
    }
  },
  "autosave": {
    "after_delay": {
      "milliseconds": 10000
    }
  },
  "git": {
    "inline_blame": {
      "enabled": true,
      "delay_ms": 500
    }
  },
  "terminal": {
    "copy_on_select": true,
    "font_size": 13,
    "font_family": "0xProto Nerd Font",
    "shell": {
      "with_arguments": {
        "program": "/bin/zsh",
        "args": ["-l"]
      }
    },
    "env": {
      "EDITOR": "zed --wait"
    }
  },
  "lsp": {
    "solargraph": {
      "initialization_options": {
        "diagnostics": true,
        "formatting": true
      }
    }
  },
  "inlay_hints": {
    "enabled": true,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true,
    "edit_debounce_ms": 700,
    "scroll_debounce_ms": 50
  },
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Catppuccin Mocha"
  }
}
