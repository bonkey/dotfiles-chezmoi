// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "context_servers": {
    "duckduckgo": {
      "source": "custom",
      "command": "docker",
      "args": ["run", "-i", "--rm", "mcp/duckduckgo"]
    },
    "context7": {
      "source": "custom",
      "command": "docker",
      "args": ["run", "-i", "--rm", "mcp/context7"]
    }
    // "supermemory": {
    //   "source": "custom",
    //   "command": "npx",
    //   "args": ["mcp-remote", "$SUPERMEMORY_MCP_URL"]
    // }
  },

  "edit_predictions": {
    "mode": "subtle"
  },
  "agent": {
    "always_allow_tool_actions": true,
    "enabled": true,
    "button": true,
    "default_width": 700,
    "dock": "right",
    "inline_assistant_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4"
    },
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4"
    },
    "commit_message_model": {
      "provider": "google",
      "model": "gemini-2.5-flash"
    }
  },

  "search": {
    "whole_word": false,
    "case_sensitive": false,
    "include_ignored": false,
    "regex": true
  },
  "use_smartcase_search": true,

  "soft_wrap": "bounded",
  "preferred_line_length": 120,
  "show_wrap_guides": true,

  "base_keymap": "VSCode",
  "buffer_font_family": "0xProto Nerd Font Mono",
  "buffer_font_size": 16,
  "vim_mode": true,
  "ui_font_size": 15,

  "theme": {
    "mode": "system",
    "dark": "Zedokai Darker (Filter Spectrum)",
    "light": "Zedokai Light"
  },

  "cursor_shape": "bar",
  "current_line_highlight": "all",
  "hide_mouse": "on_typing_and_movement",

  "outline_panel": {
    "dock": "right"
  },

  "tab_bar": {
    "show": true
  },

  "minimap": {
    "show": "auto"
  },

  "title_bar": {
    "show_branch_icon": true, // Show/hide branch icon beside branch switcher
    "show_branch_name": true, // Show/hide branch name
    "show_project_items": true, // Show/hide project host and name
    "show_onboarding_banner": true, // Show/hide onboarding banners
    "show_user_picture": true, // Show/hide user avatar
    "show_sign_in": true // Show/hide sign-in button
  },

  "tabs": {
    "close_position": "right",
    "git_status": true,
    "file_icons": true
  },

  "toolbar": {
    "breadcrumbs": true,
    "code_actions": true
  },

  "indent_guides": {
    "enabled": true,
    "line_width": 1,
    "active_line_width": 2,
    "coloring": "indent_aware",
    "background_coloring": "disabled"
  },

  "auto_signature_help": true,
  "always_treat_brackets_as_autoclosed": true,
  "use_autoclose": false,
  "format_on_save": "prettier",
  "ensure_final_newline_on_save": true,
  "remove_trailing_whitespace_on_save": true,

  "file_types": {
    "Ruby": ["Gemfile", "Dangerfile", "Fastfile", "Pluginfile", "Gymfile", "Scanfile", "Brewfile"],
    "Shell Script": [".aliases*", ".z*tmpl*", ".aliases*"],
    "Diff": ["*.patch"],
    "Python": ["*.gyb"]
  },

  "languages": {
    "Ruby": {
      "language_servers": ["solargraph", "rubocop", "!ruby-lsp"]
    },
    "Swift": {
      "format_on_save": "off"
    }
  },

  "autosave": {
    "after_delay": {
      "milliseconds": 10000
    }
  },

  "git": {
    "inline_blame": {
      "enabled": true,
      "delay_ms": 500
    }
  },

  "terminal": {
    "copy_on_select": true,
    "font_size": 13,
    "font_family": "0xProto Nerd Font",
    "shell": {
      "with_arguments": {
        "program": "/bin/zsh",
        "args": ["-l"]
      }
    },
    "env": {
      "EDITOR": "zed --wait"
    }
  },

  "lsp": {
    "solargraph": {
      "settings": {
        "use_bundler": false
      },
      "initialization_options": {
        "diagnostics": true,
        "formatting": true
      }
    }
  },

  "inlay_hints": {
    "enabled": true,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true,
    "edit_debounce_ms": 700,
    "scroll_debounce_ms": 50
  }
}
