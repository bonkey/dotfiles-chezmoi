// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "language_models": {
    "ollama": {}
  },

  "outline_panel": {
    "dock": "right"
  },

  "base_keymap": "VSCode",
  // "buffer_font_family": "GeistMono Nerd Font",
  // "buffer_font_family": "Agave Nerd Font",
  // "buffer_font_size": 18,
  "buffer_font_family": "RecMonoLinear Nerd Font Mono",
  "buffer_font_size": 16,
  "buffer_font_features": {
    // "liga": false,
    // "ss02": false,
    // "ss08": false,
    // "ss09": false
  },
  "vim_mode": true,
  "always_treat_brackets_as_autoclosed": true,
  "ui_font_size": 15,
  "active_pane_magnification": 1.5,
  "tabs": {
    "close_position": "right",
    "git_status": true
  },
  "indent_guides": {
    "enabled": true,
    "line_width": 1,
    "active_line_width": 2,
    "coloring": "indent_aware",
    "background_coloring": "disabled"
  },
  "tab_bar": {
    "show": true
  },

  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-20240620"
    },
    "version": "2",
    "provider": null
  },

  "file_types": {
    "Ruby": [
      "Gemfile",
      "Dangerfile",
      "Fastfile",
      "Pluginfile",
      "Gymfile",
      "Scanfile",
      "Brewfile"
    ],
    "Shell Script": [".aliases*", ".z*tmpl*", ".aliases*"]
  },
  "jupyter": {
    "enabled": true
  },
  "languages": {
    "Ruby": {
      "language_servers": ["ruby-lsp", "!solargraph"]
    }
  },
  "autosave": {
    "after_delay": {
      "milliseconds": 10000
    }
  },
  "git": {
    "inline_blame": {
      "enabled": true,
      "delay_ms": 500
    }
  },
  "terminal": {
    "copy_on_select": true,
    "font_size": 13,
    "font_family": "0xProto Nerd Font",
    "shell": {
      "with_arguments": {
        "program": "/bin/zsh",
        "args": ["-l"]
      }
    },
    "env": {
      "EDITOR": "zed --wait"
    }
  },
  "lsp": {
    "solargraph": {
      "initialization_options": {
        "diagnostics": true,
        "formatting": true
      }
    }
  },
  "inlay_hints": {
    "enabled": true,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true,
    "edit_debounce_ms": 700,
    "scroll_debounce_ms": 50
  },
  "theme": {
    "mode": "system",
    "light": "Colorizer Pro",
    "dark": "Colorizer Pro"
  }
}
