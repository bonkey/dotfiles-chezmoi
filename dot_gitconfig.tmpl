[user]
name = Daniel Bauke
email = {{ .email | quote }}
signingkey = ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIOHVbldBG6YD5sO9ukNttd7xi+jCYqeWJpqr1eVWh9xI

[core]
excludesfile = ~/.gitignore_global
ignorecase = false
quotepath = false
fsmonitor = true
untrackedcache = true
pager = delta

[init]
defaultBranch = main

[color]
diff = auto
status = auto
branch = auto
interactive = auto
ui = true
grep = auto
decorate = auto
showbranch = auto

[color "diff-highlight"]
oldNormal = red bold
oldHighlight = red bold 52
newNormal = green bold
newHighlight = green bold 22

[color "diff"]
meta = 11
frag = magenta bold
func = 146 bold
commit = yellow bold
old = red bold
new = green bold
whitespace = red reverse

[alias]
c = commit -am
a = add
co = checkout
wc = whatchanged -p --abbrev-commit --pretty=medium
amend = commit -a --amend
out = log origin..HEAD
lo = log --oneline --graph
l1 = log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
lg = l1 --graph
dcn = diff --name-only --diff-filter=AMCR
dcnm = dcn main
fg = forgit
ru = remote get-url
ruo = ru origin

append = town append
compress = town compress
contribute = town contribute
diff-parent = town diff-parent
hack = town hack
delete = town delete
observe = town observe
park = town park
prepend = town prepend
propose = town propose
rename = town rename
repo = town repo
set-parent = town set-parent
ship = town ship
sync = town sync

[mergetool]
prompt = false

[merge]
tool = Kaleidoscope
conflictstyle = zdiff3
autoStash = true

[git-town]
sync-feature-strategy = rebase

[difftool]
prompt = false
algorithm = histogram
mnemonicPrefix = true
renames = true
tool = Kaleidoscope
# colorMoved = plain
colormoved = default
colormovedws = "allow-indentation-change"

[rebase]
autoStash = true
updateRefs = true

[push]
default = simple
autoSetupRemote = true
followTags = true

[pull]
rebase = true

[fetch]
prune = true
pruneTags = true
all = true

[tag]
forceSignAnnotated = false
sort = version:refname

[column]
ui = auto

[rerere]
enabled = true
autoupdate = true

[branch]
sort = -committerdate

[filter "lfs"]
clean = git-lfs clean -- %f
smudge = git-lfs smudge -- %f
process = git-lfs filter-process
required = true

[interactive]
diffFilter = delta --color-only --diff-so-fancy

[gpg]
format = ssh

[commit]
gpgsign = true
verbose = true

[gpg "ssh"]
program = /Applications/1Password.app/Contents/MacOS/op-ssh-sign

# [url "git@github.com:"]
# insteadOf = https://github.com/

[delta]
true-color = always
navigate = true # use n and N to move between diff sections
line-numbers = true
hyperlinks = true
side-by-side = true

[gitbutler]
aiOpenAIKeyOption = bringYourOwn
aiOpenAIModelName = gpt-4o-mini
aiModelProvider = ollama
aiOllamaModelName = llama3.2


[mergetool "Kaleidoscope"]
cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
trustexitcode = true

[difftool "Kaleidoscope"]
cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"

[mergetool "juxta"]
cmd = juxta _mergetool --base \"${BASE:-/dev/null}\" --local \"$LOCAL\" --remote \"$REMOTE\" --merged \"${MERGED:-/dev/null}\"
trustExitCode = true
